@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model List<Participant>

<div class="col-12">
    <div class="bg-blue rounded h-100 p-4">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </div><br />
    <h4 class="card-title">Participants Table</h4><br />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">University</th>
                        <th scope="col">Qualification</th>
                        <th scope="col">Job</th>
                         <th scope="col">Setting</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@(count++)</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Age</td>
                            <td>@item.?University.Name</td>
                            <td>@item.Qualification.Name</td>
                            <td>@item.Job.Name</td>
                            <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete-variant"></i></a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
 </div>