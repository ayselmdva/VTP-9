
@{
    ViewData["Title"] = "Create";
}

@model Participant

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Create Participant</h6>
        <form asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
            <div class ="form-floating mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" id="exampleInputName1" placeholder="Surname">
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Age">Age</label>
                <input asp-for="Age" class="form-control" id="exampleInputName1" placeholder="Age">
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="UniversityId">University</label>
                <select asp-for="UniversityId" asp-items="new SelectList(ViewBag.Universities, nameof(University.Id), nameof(University.Name))"></select>
                <span asp-validation-for="UniversityId"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="QualificationId">Qualification</label>
                <select asp-for="QualificationId" asp-items="new SelectList(ViewBag.Qualifications, nameof(Qualification.Id), nameof(Qualification.Name))"></select>
                <span asp-validation-for="QualificationId"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="JobId">Job</label>
                <select asp-for="JobId" asp-items="new SelectList(ViewBag.Jobs, nameof(Job.Id), nameof(Job.Name))"></select>
                <span asp-validation-for="JobId"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button asp-action="Index" class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>


        
